<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/cont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="48dp"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="24dp"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="210dp"
            android:layout_height="177dp"
            android:adjustViewBounds="true"
            android:src="@drawable/picture_1"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/Text2"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/card_image"
        app:layout_constraintBottom_toTopOf="@+id/review"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/textC"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_image"
        app:layout_constraintEnd_toEndOf="@+id/title_"
        app:layout_constraintStart_toStartOf="@+id/title_"
        app:layout_constraintTop_toTopOf="@+id/card_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
