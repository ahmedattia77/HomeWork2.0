<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.homework20.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.homework20.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >

        <argument
            android:name="currentItem"
            app:argType="com.example.homework20.models.VacationModel" />
        <action
            android:id="@+id/action_detailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.homework20.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_singUpFragment2"
            app:destination="@id/singUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_getStartFragment3"
            app:destination="@id/getStartFragment" />
    </fragment>
    <fragment
        android:id="@+id/singUpFragment"
        android:name="com.example.homework20.SingUpFragment"
        android:label="fragment_sing_up"
        tools:layout="@layout/fragment_sing_up" >

        <action
            android:id="@+id/action_singUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_singUpFragment_to_getStartFragment"
            app:destination="@id/getStartFragment" />
    </fragment>
    <fragment
        android:id="@+id/getStartFragment"
        android:name="com.example.homework20.GetStartFragment"
        android:label="fragment_get_start"
        tools:layout="@layout/fragment_get_start" >
        <action
            android:id="@+id/action_getStartFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>